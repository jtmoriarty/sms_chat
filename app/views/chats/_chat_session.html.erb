<head>
  <title>SmsChat</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<h1>Chat</h1>

<div id="ajax-div">
	<table>
		<% @chats.each do |chat_msg| %>
			<tr>
				<td><%= chat_msg.user %>: </td>
				<td><%= chat_msg.message %></td>
				<td><%= link_to 'Destroy', chat_msg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</table>
</div>


<%= form_for @chat, :remote => true do |f| %>
	<%= f.text_field :message %>
	<%= f.text_field :user, :value => params[:user][:user] %>
	<%#= hidden_field_tag 'user', :user %>
	<%= f.submit 'Send', :remote => true %>
<% end %>